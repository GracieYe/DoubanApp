<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabMainNav"
    android:layout_width="fill_parent"
	android:layout_height="70dp" 
	android:orientation="horizontal" >

	<LinearLayout
        android:id="@+id/tab_nav_me"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_nav_me_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
			android:layout_marginTop="5dip" 
			android:layout_marginBottom="1dip"
            android:background="@drawable/tab_main_nav_me"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
			android:textColor="#ffffff"
			android:layout_marginBottom="5dip" 
            android:text="@string/app_name"/>
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/tab_nav_book"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/tab_nav_book_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
			android:layout_marginTop="5dip" 
			android:layout_marginBottom="1dip"
            android:background="@drawable/tab_main_nav_book"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
			android:textColor="#ffffff"
			android:layout_marginBottom="5dip" 
            android:text="@string/newBook"/>
    </LinearLayout>
</LinearLayout>
